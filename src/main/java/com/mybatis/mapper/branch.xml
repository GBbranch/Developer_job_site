<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Branch">
	<insert id="article-insert" parameterType="articledto">
		INSERT INTO ARTICLE a VALUES (article_seq.nextval, #{title}, #{job}, #{career}, #{salary}, #{location}, #{need_amt}, #{deadline}, #{job_explain}, #{qualify},#{tag_stack})
	</insert>
	<insert id="company-insert" parameterType="companydto">
		INSERT INTO COMPANY c VALUES (company_seq.nextval, #{company_no}, #{password}, #{name}, #{birth}, #{type}, #{employee_no}, #{sale}, #{ceo},
							#{url}, #{addr}, ${detail_addr})
	</insert>
	<select id="company-select" parameterType="_int" resultType="companydto">
		SELECT * FROM COMPANY c WHERE ID = #{id}
	</select>
	<select id="article-select" parameterType="_int" resultType="articledto">
		SELECT * FROM ARTICLE a WHERE ID = #{id}
	</select>
</mapper>







